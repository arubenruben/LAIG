<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant ="1.0" linear = "0.0" quadratic = "0.0"/>
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <translate x="0" y="0" z="0" />
        </transformation>

         <transformation id="demoTransform1">
            <translate x="5" y="0" z="0" />
        </transformation>

         <transformation id="demoTransform2">
            <translate x="-5" y="0" z="0" />
        </transformation>

        <transformation id="transform_torus">
            <rotate axis="x" angle="90" />
        </transformation>

        <transformation id="identity">
            <translate x="0" y="0" z="0"/>
        </transformation>

        <transformation id="underground_transf">
            <translate x="0" y="-1" z="-1" />
            <rotate axis="x" angle="90" />
            <scale x="5" y="10" z="1" />
            
        </transformation>

        <transformation id="floor_transf">
            <translate x="-10" y="-5" z="20" />
            <rotate axis="x" angle="-90" />
            <scale x="5" y="40" z="1" />
            
        </transformation>

        <transformation id="pool_center_transf">
            <translate x="-10" y="0" z="-20" />
            <rotate axis="x" angle="-90" />
            <scale x="5" y="10" z="1" />
        </transformation>

        <transformation id="width_transf">
            <rotate axis="x" angle="-90" />
            <scale x="5" y="1" z="1" />
        </transformation >

        <transformation id="length_transf">
            <rotate axis="x" angle="-90" />
            <scale x="0.7" y="8" z="1" />
        </transformation>

        <transformation id = "width_translation">
            <translate x="0" y="0" z="9"   />
        </transformation>

        <transformation id = "length_translation">
            <translate x="0" y="0" z="8"   />
        </transformation>

          <transformation id = "length_translation_2">
            <translate x="4.3" y="0" z="0"   />
        </transformation>

         <transformation id = "scale_the_terrain">
            <scale x="1.5" y="1" z="1"   />
        </transformation>



        <transformation id = "left_side_terrain_transf">
            <translate x="0" y="0" z="-1"/>
            <rotate axis="y" angle="-90" />
            <scale x="10" y="1" z="1"/>
            <translate x="0" y="-1" z="0" />
        </transformation>

        <transformation id = "right_side_terrain_transf">
            <translate x="5" y="0" z="-1"/>
            <rotate axis="y" angle="-90" />
            <scale x="10" y="1" z="1"/>
            <translate x="0" y="-1" z="0" />
        </transformation>


        <transformation id = "front_side_terrain_transf">
            <translate x="0" y="0" z="9"/>
            <scale x="5" y="1" z="1"/>
            <translate x="0" y="-1" z="0" />
        </transformation>

        <transformation id = "back_side_terrain_transf">
            <translate x="0" y="0" z="-1"/>
            <scale x="5" y="1" z="1"/>
            <translate x="0" y="-1" z="0" />
        </transformation>


    </transformations>

    <primitives>
       <primitive id="square">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>
        
    </primitives>

    <components>

        

        <component id="scale_rotate_width">
            <transformation>
                <transformationref id="width_transf"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitive id="square"/>
            </children>
        </component>


        <component id="scale_rotate_length">
            <transformation>
                <transformationref id="length_transf"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitive id="square"/>
            </children>
        </component>

        <component id="floor_front_width">
            <transformation>
                <transformationref id="width_translation"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="scale_rotate_width"/>
            </children>
        </component>

        <component id="floor_back_width">
            <transformation>
                <transformationref id="identity"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="scale_rotate_width"/>
                <componentref id="floor_front_width"/>
            </children>
        </component>


        <component id="floor_right_length">
            <transformation>
                <transformationref id="length_translation_2"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="scale_rotate_length"/>
            </children>
        </component>


        <component id="floor_left_length">
            <transformation>
                <transformationref id="length_translation"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="scale_rotate_length"/>
                <componentref id="floor_right_length"/>
            </children>
        </component>


        <component id="floor">
            <transformation>
                <transformationref id="identity"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="floor_back_width" />
                <componentref id="floor_left_length" />

            </children>
        </component>


        
        <component id="underground">
            <transformation>
                <transformationref id="underground_transf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="right_side">
            <transformation>
                <transformationref id="right_side_terrain_transf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="left_side">
            <transformation>
                <transformationref id="left_side_terrain_transf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="back_side">
            <transformation>
                <transformationref id="back_side_terrain_transf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="front_side">
            <transformation>
                <transformationref id="front_side_terrain_transf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>



        <component id="terrain">
          <transformation>
                <transformationref id="scale_the_terrain" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="underground"/>
                <componentref id="floor"/>
                <componentref id="left_side"/>
                 <componentref id="right_side"/>
                <componentref id="front_side"/>
                 <componentref id="back_side"/>
              

            </children>
        </component>

        <component id="demoRoot">
            <transformation>
                <transformationref id="demoTransform" />
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="terrain" />   
            </children>
        </component>


    </components>
</lxs>