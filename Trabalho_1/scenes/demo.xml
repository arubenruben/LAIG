<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="ortho_id" near="0.1" far="0.5" left="0.78" right="0.15" top="0.55" bottom="0.7">
            <from x="0.1" y="0.1" z="0.5"/>
            <to x="0" y="0" z="0"/>
            <up x="0" y="0" z="0"/>
        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="1.0" quadratic="1.0" />
        </omni>
        <spot id="demospot" enabled="1" angle="45" exponent="1">    
            <location x="0" y="0" z="0" w="0"/>
            <target x="0" y="0" z="0"/>
            <ambient r="0" g="0" b="0" a="0"/>
            <diffuse r="1" g="1" b="1" a="1"/>
            <specular r="1" g="1" b="1" a="1"/>
            <attenuation constant="1" linear="1" quadratic="1"/>
        </spot>



    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <translate x= "0" y="0" z="3"/>
            <scale x="1" y="1" z="5" />
            <rotate axis="x" angle="0" />
            <rotate axis="z" angle="0" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                
                <transformationref id="demoTransform"/>
            
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>
    </components>
</lxs>