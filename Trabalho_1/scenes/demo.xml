<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant ="1.0" linear = "0.0" quadratic = "0.0"/>
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <translate x="0" y="0" z="0" />
        </transformation>

         <transformation id="demoTransform1">
            <translate x="5" y="0" z="0" />
        </transformation>

         <transformation id="demoTransform2">
            <translate x="-5" y="0" z="0" />
        </transformation>

        <transformation id="transform_torus">
            <rotate axis="x" angle="90" />
        </transformation>

    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="demoSphere">
            <sphere radius="3" slices="50" stacks="50" />
        </primitive>
        <primitive id="demoTorus">
            <torus inner="0.5" outer= "4" slices="50" loops="50" />
        </primitive>

    </primitives>

    <components>

        <component id="demo_torus">
            <transformation>
                <transformationref id="transform_torus" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>
         
         <component id="demoRoot1">
            <transformation>
                <transformationref id="demoTransform1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoSphere" />
                <componentref id="demo_torus" />
            </children>
        </component>

        <component id="demoRoot2">
            <transformation>
                <transformationref id="demoTransform2" />
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoSphere" />
                <componentref id="demo_torus" />
            </children>
        </component>

        <component id="demoRoot">
            <transformation>
                <transformationref id="demoTransform" />
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="demoRoot1" />
                <componentref id="demoRoot2" />
            </children>
        </component>


    </components>
</lxs>